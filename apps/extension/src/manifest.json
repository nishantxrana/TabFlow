{
  "manifest_version": 3,
  "name": "TabFlow",
  "version": "0.1.0",
  "description": "A local-first, reliability-focused tab manager with optional AI-powered grouping",
  "action": {
    "default_popup": "popup.html",
    "default_title": "TabFlow"
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "src/background/index.ts",
    "type": "module"
  },
  "permissions": ["tabs", "storage", "alarms", "identity"],
  "host_permissions": [],
  "oauth2": {
    "client_id": "497790964210-llnjj6m60170mu0u74njrn7di8r23lmp.apps.googleusercontent.com",
    "scopes": ["https://www.googleapis.com/auth/userinfo.email"]
  }
}
